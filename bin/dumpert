#! /usr/bin/env python3

from bs4 import BeautifulSoup
from urllib.request import urlopen
import subprocess as sp


def findurl (url):
    page    = urlopen(url)
    html    = page.read()
    soup = BeautifulSoup(html)
    div  = soup.find("div", id="item1")

    if div["class"] == ["video"]:
        return div["data-vidurl"]
    else:
        None


def play (url):
    sp.call(["mplayer", url])


if __name__ == "__main__":
    import sys

    out = findurl(sys.argv[1])
    play(out)
